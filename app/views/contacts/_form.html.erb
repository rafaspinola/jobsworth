            <div class="controls"><%= f.text_field :charge_city %></div>
          </div>
          <div class="control-group">
            <%= f.label "Estado" %>
            <div class="controls"><%= f.text_field :charge_state %></div>
          </div>
          <div class="control-group">
            <%= f.label "Telefone" %>
            <div class="controls"><%= f.text_field :charge_phone %></div>
          </div>
        </div>
        <div class="tab-pane" id="comercial-pane">
          <div class="control-group">
            <%= f.label "Rua/Número" %>
            <div class="controls"><%= f.text_field :commerce_street %></div>
          </div>
          <div class="control-group">
            <%= f.label "Complemento" %>
            <div class="controls"><%= f.text_field :commerce_complement %></div>
          </div>
          <div class="control-group">
            <%= f.label "Bairro" %>
            <div class="controls"><%= f.text_field :commerce_neighbourhood %></div>
          </div>
          <div class="control-group">
            <%= f.label "CEP" %>
            <div class="controls"><%= f.text_field :commerce_zip %></div>
