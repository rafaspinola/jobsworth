<%= form_for(@contact, :html => {:class => "form-horizontal"})  do |f| %>
  <div class="tab-content">
    <div class="tab-pane active" id="main-pane">
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#general-pane" data-toggle="tab">Dados Pessoais</a>
      </li>
      <li>
        <a href="#doctos-pane" data-toggle="tab">Documentos</a>
      </li>
    </ul>
  </div>

  <div class="tab-content">
    <div class="tab-pane active" id="general-pane">
      <div class="control-group">
        <%= f.label "Nome" %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Sigla" %>
        <div class="controls">
          <%= f.text_field :acronym %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Pessoa Física" %>
        <div class="controls">
          <%= f.check_box :is_person %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Pessoa Jurídica" %>
        <div class="controls">
          <%= f.check_box :is_company %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Cliente" %>
        <div class="controls">
          <%= f.check_box :client %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Fornecedor" %>
        <div class="controls">
          <%= f.check_box :provider %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Celular" %>
        <div class="controls">
          <%= f.text_field :cell %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Fone 1" %>
