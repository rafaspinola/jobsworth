          <%= f.text_field :contact %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Vínculo" %>
        <div class="controls">
          <%= f.text_field :bond %>
        </div>
      </div>
      <div>
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#address-pane" data-toggle="tab">Endereço</a>
          </li>
          <li>
            <a href="#cobranca-pane" data-toggle="tab">Cobrança</a>
          </li>
          <li>
            <a href="#comercial-pane" data-toggle="tab">Comercial</a>
          </li>
        </ul>
      </div>
      <div class="tab-content">
        <div class="tab-pane active" id="address-pane">
          <div class="control-group">
            <%= f.label "Rua/Número" %>
            <div class="controls"><%= f.text_field :address_street %></div>
          </div>
          <div class="control-group">
            <%= f.label "Complemento" %>
