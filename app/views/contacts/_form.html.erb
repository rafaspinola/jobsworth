            <div class="controls"><%= f.text_field :address_city %></div>
          </div>
          <div class="control-group">
            <%= f.label "Estado" %>
            <div class="controls"><%= f.text_field :address_state %></div>
          </div>
          <div class="control-group">
            <%= f.label "Telefone" %>
            <div class="controls"><%= f.text_field :address_phone %></div>
          </div>
        </div>
        <div class="tab-pane" id="cobranca-pane">
          <div class="control-group">
            <%= f.label "Rua/Número" %>
