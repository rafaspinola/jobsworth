        <%= f.label "Fone 2" %>
        <div class="controls">
          <%= f.text_field :phone2 %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Fone 3 (fax)" %>
        <div class="controls">
          <%= f.text_field :phone3 %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "e-Mail" %>
        <div class="controls">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Site" %>
        <div class="controls">
          <%= f.text_field :website %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Categoria" %>
        <div class="controls">
          <%= f.text_field :category %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Contato" %>
