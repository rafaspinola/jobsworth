          <div class="control-group">
            <%= f.label "Telefone" %>
            <div class="controls"><%= f.text_field :commerce_phone %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane" id="doctos-pane">
     <div class="control-group">
        <%= f.label "CPF/CNPJ" %>
        <div class="controls">
          <%= f.text_field :cpf %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Estado Civil" %>
        <div class="controls">
          <%= f.text_field :marital_state %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "OAB" %>
        <div class="controls">
          <%= f.text_field :oab %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "RG" %>
        <div class="controls">
          <%= f.text_field :rg %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "PIS" %>
        <div class="controls">
          <%= f.text_field :pis %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Nacionalidade" %>
        <div class="controls">
          <%= f.text_field :nationality %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Carteira de Trabalho" %>
        <div class="controls">
          <%= f.text_field :work_register %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Profissão" %>
        <div class="controls">
          <%= f.text_field :profession %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Título de Eleitor" %>
        <div class="controls">
          <%= f.text_field :elector_title %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Nascido em" %>
        <div class="controls">
          <%= f.text_field :birth_date, value: @contact.formatted_birth_date %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Pai" %>
        <div class="controls">
          <%= f.text_field :father %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Mãe" %>
        <div class="controls">
          <%= f.text_field :mother %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label "Outras informações" %>
        <div class="controls">
          <%= f.text_area :observations %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <table style="padding: 0px; margin: 0px; border: 0px;">
      <tr>
        <td style="float: left;">
          <%= f.submit  :class => "btn btn-primary" %>
          <% end %>
        </td>
        <td style="padding-left: 50px;">
          <%= button_to('Destroy', @contact, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn") if @contact.persisted? %>
        </td>
      </tr>
    </table>
  </div>
    </div>
